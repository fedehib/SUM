            @Html.EditorFor(model => model.tx_contrasena, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.tx_contrasena, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
