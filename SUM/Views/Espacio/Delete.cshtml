@model SUM.Models.Espacio

@{
    ViewBag.Title = "Eliminar";
}

<h2>Eliminar</h2>

<h3>¿Esta seguro que desea eliminarlo?</h3>
<div>
    <h4>Espacio</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Descripción
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tx_descripcion)
        </dd>

        <dt>
            Costo semana
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fl_costo_semana)
        </dd>

        <dt>
            Costo fin de semana
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fl_costo_fin_de_semana)
        </dd>
        <dt>
            Costo limpieza
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fl_limpieza)
        </dd>

        <dt>
            Costo multa
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fl_multa)
        </dd>

        <dt>
           Consorcio
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Consorcio.tx_descripcion)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-default" /> |
            @Html.ActionLink("Volver a la lista", "Index")
        </div>
    }
</div>
