@model SUM.Models.Reclamo

@{
    ViewBag.Title ="Crear";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col">
            <h4>Crear Reclamo</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            @if (((SUM.Models.Usuario)Session["Usuario"]).fl_administrador)
    {
        <div class="form-group">
            @Html.LabelFor(model => model.cd_usuario, "Departamento", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("cd_usuario", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.cd_usuario, "", new { @class = "text-danger" })
            </div>
        </div>
}

            <div class="form-group">
                @Html.LabelFor(model => model.tx_reclamo, "Escriba su reclamo", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <textarea class="form-control" name="tx_reclamo" rows="10" id="tx_reclamo"></textarea>
                    @Html.ValidationMessageFor(model => model.tx_reclamo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.fl_publico,"Desea que sea publico?", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    <div class="checkbox">
                        @Html.EditorFor(model => model.fl_publico)
                        @Html.ValidationMessageFor(model => model.fl_publico, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Crear" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver a la lista", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
