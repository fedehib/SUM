@model SUM.Models.Reclamo

@{
    ViewBag.Title = "Editar";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Editar Reclamo</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.cd_reclamo)
    @Html.HiddenFor(model => model.cd_consorcio)
    @Html.HiddenFor(model => model.cd_usuario)


    <div class="form-group">
        @Html.LabelFor(model => model.tx_reclamo, "Escriba su reclamo", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <textarea class="form-control" name="tx_reclamo" rows="10" id="tx_reclamo">@Model.tx_reclamo</textarea>
            @Html.ValidationMessageFor(model => model.tx_reclamo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.fl_publico,"Desea que sea publico?", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.fl_publico)
                @Html.ValidationMessageFor(model => model.fl_publico, "", new { @class = "text-danger" })
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Guardar" class="btn btn-primary" />
        </div>
    </div>
</div>
}

    <div>
        @Html.ActionLink("Volver a la lista", "Index")
    </div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
