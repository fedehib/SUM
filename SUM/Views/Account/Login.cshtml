@model SUM.Models.Usuario
@{
    ViewBag.Title = "Iniciar sesión";
}

<h2>@ViewBag.Title.</h2>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Use una cuenta local para iniciar sesión.</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.cd_usuario, "Departamento", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.cd_usuario, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.cd_usuario, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.tx_contrasena, "Contraseña", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.tx_contrasena, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.tx_contrasena, "", new { @class = "text-danger" })
            </div>
        </div>
        if (ViewBag.Cantidad > 1)
        {
        <div class="form-group">
            @Html.LabelFor(m => m.cd_consorcio, "Consorcio", new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.DropDownList("cd_consorcio", new SelectList(ViewBag.Consorcio as System.Collections.IEnumerable, "Value", "Text"), "", htmlAttributes: new { @class = "form-control", id = "cd_consorcio" })
            </div>
        </div>
        }
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Iniciar sesión" class="btn btn-default" />
            </div>
        </div>
         if (ViewBag.Resultado!="")
            {
        <div class="form-group">

            <div class="alert alert-warning alert-danger" role="alert" id="alertaboton">
                <h6>@ViewBag.Resultado</h6>
            </div>
            </div>
            }


            }
</section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}